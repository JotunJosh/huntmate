{
  "name": "huntmate",
  "version": "3.1.1",
  "private": true,
  "main": "public/electron.js",
  "description": "Monster Hunter Wilds Companion App",
  "author": "JotunJosh",
  "homepage": ".",
  "dependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^13.5.0",
    "concurrently": "^9.1.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "electron-updater": "^6.6.2",
    "express": "^4.21.2",
    "fs": "^0.0.1-security",
    "i18next": "^24.2.3",
    "lottie-react": "^2.4.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-i18next": "^15.4.1",
    "react-router-dom": "^7.3.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "electron": "^35.0.1",
    "electron-builder": "^25.1.8",
    "electron-is-dev": "^3.0.1",
    "postcss": "^8.5.3",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.0.17"
  },
  "scripts": {
    "start": "react-scripts start",
    "server": "node Skill_Server.js",
    "electron": "electron .",
    "package": "electron-builder --win --config electron-builder.yml",
    "dev": "npm start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "clean": "rimraf build dist",
    "full-build": "npm run clean && npm run build && npm run package",
    "release": "node release.js"
  },
  "build": {
    "appId": "com.huntmate.app",
    "productName": "HuntMate",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "electron.js",
      "data.json",
      "build/**/*",
      "public/**/*"
    ],
    "extraResources": [
      {
        "from": "data.json",
        "to": "data.json"
      }
    ],
    "publish": [
      {
        "provider": "github",
        "releaseType": "release",
        "owner": "JotunJosh",
        "repo": "huntmate"
      }
    ],
    "win": {
      "target": "msi",
      "icon": "assets/icon.ico"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}